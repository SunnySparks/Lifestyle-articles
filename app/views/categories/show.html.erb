<h1>Categories#show</h1>
<p>Find me in app/views/categories/show.html.erb</p>


<% @articles.each do |art| %>
  <%= art.title %>
    <article class="card">

       <div class="card__info">
         <h2 class="card__title">
         </h2>
         <div class="card__subtitle">
         </div>
         <div>
           <p class="card__content">
             <%= art.text %>
             <% if art.avatar.attached? %>
              <image src="<%=(url_for(art.avatar))%>">
            <% end %>
             
           </p>
             <%= link_to 'Read more', article_path(art.id), class: 'card__read-more' %>
             Votes
              <%= art.get_upvotes.size %>
         </div>
     </article>
<% end %>

<%= link_to 'Back', :back %>