<div class="container">
  <div class="row" >  
    <% @categories.each do |cat| %> 
      

         
          <% cat.articles.take(1).each do |c| %>
 
            <div class="col-4 justify-content-evenly text-center p-2"> 
              <div class="col p-2 cat-grid-cont">  
                <h3><%= link_to "#{cat.name}", category_path(cat.id), class: 'text-dark' %></h3></br>
                <h4><%= c.title %></h4></br>
                <div class="thumbnail m-auto">
                  <%= image_tag(c.avatar, class: 'thumbnail-img') %></br>
                </div>
                <span></span></br>
              </div>
            </div>

          <% end %>
          
          
          
        
      
    <% end %>
  </div>
</div>
  




<% @categories.each do |cat|%>
  <%= link_to "#{cat.name}", category_path(cat.id) %>
<% end %>