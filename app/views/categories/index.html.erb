<div class="m-5 p-1"></div>



<main class="container">

<div class="container p-4 main-article col-lg text-center mt-5 mb-5">


<% @voted_article.take(1).each do |vot| %>       

    <h3><%= vot.title %></h3></br>
      
    <p class="edica-blog-post-meta">
      <% if vot.user_id == current_user.id %>
      <%= link_to 'Edit', edit_article_path(vot.id), class: 'art-card__button-link btn-warning' %>
      <%= link_to 'Delete', article_path(vot.id), method: :delete, class: 'art-card__button-link btn-danger' %>
      <% end %>
      <%= vot.get_upvotes.size %> Votes • 
      <%= link_to like_article_path(vot.id), method: :put do %>
        Vote! • 
      <% end %>          
      <%= link_to dislike_article_path(vot.id), method: :put do %>
        Downvote
       <% end %> 
    </p>

    <%= image_tag(vot.avatar) %></br>
    <div class="m-3"></div>
    <h5 class="text-justify"><%= vot.text %></h5></br>
    <%= link_to "See more", article_path(vot) %>

<% end %>

</div>

    <div class="container p-4">
      <%= render 'categories' %>
    </div>
  </div>
</main>

