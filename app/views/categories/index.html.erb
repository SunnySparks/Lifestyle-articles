<main class="container">

<div class="container p-4 main-article col-lg text-center mt-5 mb-5">


<% @voted_article.take(1).each do |vot| %>       

    <h3><%= vot.title %></h3></br>
      
    <p class="edica-blog-post-meta">
    • <%= vot.get_upvotes.size %> Votes • 
    </p>

    <%= image_tag(vot.avatar) %></br>
    <div class="m-3"></div>
    <h5 class="text-justify"><%= vot.text %></h5></br>
    <%= link_to "See more", article_path(vot) %>

<% end %>

</div>

    <div class="container p-4">
      <%= render 'categories' %>
    </div>
  </div>
</main>

